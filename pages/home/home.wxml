<!--pages/home/home.wxml-->
<text class="title">今天天气不错</text>
<button size="mini">按钮</button>

<!-- 小程序的数据绑定：绑定数据都需要mustache语法{{}} -->
<view>{{title}}</view>
<view>我的名字是：{{name}}</view>

<!-- 列表展示：小程序的循环遍历 -->
<!-- 1.循环变量 -->
<view wx:for="{{students}}" >
  {{item.name}} : {{item.age}}
</view>

<!-- 2.循环字符串 -->
<view wx:for="students" >
  {{item}}
</view>

<!-- 3.小程序的事件绑定：点击事件 -->
<!-- 点击按钮，变量count1改变了，但页面中数据不会改变 -->
<view>当前计数：{{count1}}</view>
<button size="mini" bindtap="increse1">+</button>
<button size="mini" bindtap="decrese1">-</button>

<!-- 点击按钮，变量count2改变了，页面中数据也响应式改变 -->
<view>当前计数：{{count2}}</view>
<button size="mini" bindtap="increse2">+</button>
<button size="mini" bindtap="decrese2">-</button>